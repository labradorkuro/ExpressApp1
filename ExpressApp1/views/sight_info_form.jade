    tr
      td.form_title 請求書締日
        td
          input#sight_client_cd(type="hidden" name="sight_client_cd")
          select#shimebi(name="shimebi" required="true")
    tr
      td.form_title 支払日情報
      td
        select#sight_id(name="sight_id")
    tr
      td.form_title 休日対応
      td
        select#kyujitsu_setting(name="kyujitsu_setting")
          option(value=0) 前へ
          option(value=1) 後へ
    tr
      td.form_title 振込口座
      td
        select#bank_info(name="bank_info")
