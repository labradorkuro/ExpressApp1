extends layout

block head
  link(rel="stylesheet" ,href="stylesheets/schedule.css")

block content
  div(class="titlebar")
    img(class="titlebar_logo" src="images/drc_logo.jpg")
    span(class="titlebar")= title
  div(style="padding-top:50px")
    form(method="POST" action="login")
        table(class="login_table")
            tr(class="login_title")
                th(colspan="2") ログイン
            tr
                td(class="login_title") ユーザID
                td 
                    input(type="text" name="userid" id="userid" size="20")
            tr
                td(class="login_title") パスワード
                td 
                    input(type="password" name="passwd" id="passwd" size="20")
            tr
                td(colspan="2" style="text-align:center")
                    input(type="submit" name="submit" value="送信")
                
                     
    