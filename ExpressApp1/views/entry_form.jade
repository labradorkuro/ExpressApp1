//
// 案件登録フォーム
//
form#entryForm(method="post",action="javascript:return false;")
	table
		tr
			td.form_title 案件番号
			td 
				input#entry_no(type="text" name="entry_no" value=no readonly="true" placeholder="案件番号")
			td.form_title 問合せ日
			td 
				input.datepicker#inquiry_date(type="text" name="inquiry_date" placeholder="問合せ日")
		tr
			td.form_title 拠点CD
			td 
				select#base_cd(name="base_cd")
					option(value="00") 共通
					option(value="01" selected="true") 本社
					option(value="02") 札幌支社
			td.form_title ステータス
			td 
				select#entry_status(name="entry_status")
					option(value="01" selected="true") 引合
					option(value="02") 見積
					option(value="03") 依頼
					option(value="04") 失注
		tr
			td.form_title 見積番号
			td 
				input#quote_no(type="text" name="quote_no")
			td.form_title 見積発行日
			td 
				input.datepicker#quote_issue_date(type="text" name="quote_issue_date")
		tr
			td.form_title 受注先CD
			td
				input#client_cd(type="text" name="client_cd")
			td.form_title 見積書
			td 
				a.form_button#print_quote 発行
		tr
			td.form_title 受注先名称1
			td
				input#client_name_1(type="text" name="client_name_1")
			td.form_title 受注先名称2
			td 
				input#client_name_2(type="text" name="client_name_2")
		tr
			td.form_title 受注先部署
			td
				input#prepared_division(type="text" name="prepared_division")
			td.form_title 受注先担当者
			td 
				input#prepared_name(type="text" name="prepared_name")
	hr
	table
		tr
			td.form_title 
				span.remark ＊案件名
			td
				input#entry_title(type="text" name="entry_title")
			td.form_title 契約区分
			td 
				select#contract_type(name="contract_type")
					option(value="1" selected="true") 一般依頼
					option(value="2") 個別契約
					option(value="3") その他契約
		tr
			td.form_title 受託区分
			td(colspan="3")
				label
					input#order_type_01(type="radio" name="order_type" value="1" checked="true")
					| 社内実施
				label
					input#order_type_02(type="radio" name="order_type" value="2")
					| 外部国内
				label
					input#order_type_03(type="radio" name="order_type" value="3")
					| 外部海外
		tr
			td.form_title 委託先CD
			td
				input#outsourcing_cd(type="text" name="outsourcing_cd")
			td.form_title 外部委託先情報
			td
				textarea#outsourcing_info(cols="20" rows="3" name="outsourcing_info")
	hr
	table
		tr
			td.form_title 試験課
			td 
				select#division(name="division")
					option(value="01" selected="true") SPF/PA試験
					option(value="02") 安全性評価試験
					option(value="03") 有用性試験
					option(value="04") 食品ヒト試験
					option(value="05") 代替法試験
			td.form_title 担当者
			td 
				select#person_id(name="person_id")
		tr
			td.form_title 受注日
			td 
				input.datepicker#order_accepted_date(type="text" name="order_accepted_date")
			td.form_title 仮受注チェック
			td
				input#order_accept_check_0(type="radio" name="order_accept_check" value="0" checked="true")
				label 本登録
				input#order_accept_check_1(type="radio" name="order_accept_check" value="1")
				label 仮登録
		tr
			td.form_title 案件合計金額
			td
				input.num_type#entry_amount_price(type="text" name="entry_amount_price")
			td.form_title 案件請求合計金額
			td
				input.num_type#entry_amount_billing(type="text" name="entry_amount_billing")
		tr
			td.form_title 案件入金合計金額
			td
				input.num_type#entry_amount_deposit(type="text" name="entry_amount_deposit")
			td.form_title 会計期No
			td
				select#acounting_period_no(name="acounting_period_no")
					option(value="1" selected="true") 1
					option(value="2") 2
					option(value="3") 3
					option(value="4") 4
	hr
	table
		tr
			td.form_title 分割請求日1
			td 
