//
// 試験大分類・中分類登録フォーム
//
form#test_itemForm(method="post",action="javascript:return false;")
	table
		tr
			td.form_title 試験項目CD
			td 
				input#large_item_cd(type="hidden")
				input#item_cd(type="text" name="item_cd" maxlength="4" placeholder="項目CD")
			td.form_title 名前
			td 
				input#item_name(type="text" name="item_name" maxlength="128" placeholder="項目名")
		tr
			td.form_title 備考
			td(colspan="3") 
				textarea#memo(name="memo" placeholder="メモ" maxlength="128" cols="30" rows="4")
	hr
	table
		tr
			td.form_title 削除フラグ
			td(colspan="3")
				label
					input#delete_check(type="checkbox" name="delete_check" value="0")
					| 削除
